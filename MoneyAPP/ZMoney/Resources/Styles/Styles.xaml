<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="mainPageStyle" TargetType="ContentPage">
        <Setter Property="BackgroundImageSource" Value="backgroud.png" />
        <Setter Property="Shell.NavBarIsVisible" Value="False" />
    </Style>
    <Style x:Key="sidePageStyle" TargetType="ContentPage">
        <Setter Property="BackgroundImageSource" Value="backgroud.png" />
        <Setter Property="Shell.BackgroundColor" Value="#4C511507" />
        <Setter Property="Shell.TitleColor" Value="Transparent" />
    </Style>
</ResourceDictionary>
